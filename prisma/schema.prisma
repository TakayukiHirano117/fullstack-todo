generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["auth", "public"]
}

model Todos {
  id         Int      @id @default(autoincrement())
  title      String
  content    String
  due_date   DateTime
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  @@schema("public")
}

model Users {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String?

  @@schema("public")
}
